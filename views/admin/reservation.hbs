<div class="background_table">
    <div class="header_table">
        <div>
            <h1 class="mb-4">Reservations</h1>
            <div class="d-flex justify-content-between">
                <div class="filter_table py-0 d-flex">
                    <input type="text" class="search_table border border-secondary border-1">
                    <div class="btn_search btn btn-info">
                        <svg xmlns="http://www.w3.org/2000/svg" width="16" height="16" fill="currentColor"
                            class="bi bi-search" viewBox="0 0 16 16">
                            <path
                                d="M11.742 10.344a6.5 6.5 0 1 0-1.397 1.398h-.001c.03.04.062.078.098.115l3.85 3.85a1 1 0 0 0 1.415-1.414l-3.85-3.85a1.007 1.007 0 0 0-.115-.1zM12 6.5a5.5 5.5 0 1 1-11 0 5.5 5.5 0 0 1 11 0z" />
                        </svg>
                    </div>

                    <div class="dropdown open ml-3">
                        <button class="btn btn-lg btn-primary dropdown-toggle" type="button" id="triggerId"
                            data-bs-toggle="dropdown" aria-haspopup="true" aria-expanded="false">
                            Show
                        </button>
                        <div class="dropdown-menu" aria-labelledby="triggerId">
                            <a class="dropdown-item" href="/Admin/Rooms/0"></a>
                            <a class="dropdown-item" href="/Admin/Rooms/">4-6</a>
                            <a class="dropdown-item" href="/Admin/Rooms/">7-9</a>

                        </div>
                    </div>
                </div>

                <div class="add_Room">
                    <!-- Button trigger modal -->
                    <button type="button" class="btn btn-primary btn-lg" data-toggle="modal" data-target="#addNewModal">
                        Add new
                    </button>

                    <!-- Modal -->
                    <div class="modal fade" id="addNewModal" tabindex="-1" role="dialog"
                        aria-labelledby="addNewModalLabel" aria-hidden="true">
                        <div class="modal-dialog" role="document">
                            <div class="modal-content">
                                <div class="modal-header">
                                    <h2 class="modal-title text-success" id="addNewModalLabel">Add a new customer</h2>
                                    <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                                        <span aria-hidden="true">&times;</span>
                                    </button>
                                </div>
                                <div class="modal-body px-5 my-4">
                                    <form action="add/reservation" method="POST">
                                        <div class="form-group">
                                            <label for="resName" class="col-form-label">User Name:</label>
                                            <input type="text" class="form-control" id="name" name="name">
                                        </div>
                                        <div class="form-group">
                                            <label class="col-form-label">User email:</label>
                                            <input type="text" class="form-control" id="email" name="email">
                                        </div>
                                        <div class="form-group">
                                            <label class="col-form-label">User phone:</label>
                                            <input type="text" class="form-control" id="phone" name="phone">
                                        </div>
                                        <div class="form-group">
                                            <label class="col-form-label">Room Name:</label>
                                            <input type="text" class="form-control" name="nameRoom" id="nameRoom">
                                        </div>
                                        <div class="form-group">
                                            <label class="col-form-label">Room Location:</label>
                                            <input type="text" class="form-control" name="location" id="location">
                                        </div>
                                        <div class="form-group">
                                            <label class="col-form-label">Number Adult:</label>
                                            <input type="number" class="form-control" name="adult" id="adult">
                                        </div>
                                        <div class="form-group">
                                            <label class="col-form-label">Number Children:</label>
                                            <input type="number" class="form-control" name="children" id="children">
                                        </div>
                                        <div class="form-group">
                                            <label class="col-form-label">Room rating:</label>
                                            <input type="number" class="form-control" name="rating" id="rating">
                                        </div>
                                        <div class="form-group">
                                            <label class="col-form-label">Date From:</label>
                                            <input type="date" class="form-control" name="dateFrom" id="dateFrom">
                                        </div>
                                        <div class="form-group">
                                            <label class="col-form-label">Date To:</label>
                                            <input type="date" class="form-control" name="dateTo" id="dateTo">
                                        </div>
                                        <div class="form-group">
                                            <label class="col-form-label">Room Price:</label>
                                            <input type="number" class="form-control" name="price" id="price">
                                        </div>
                                        <div class="form-check">
                                            <input type="checkbox" class="form-check-input" id="dropdownCheck"
                                                name="extraService" value="30">
                                            <label class="form-check-label" for="dropdownCheck">
                                                Pick up at Airport
                                            </label>
                                            <input type="checkbox" class="form-check-input" id="dropdownCheck"
                                                name="extraService" value="15">
                                            <label class="form-check-label" for="dropdownCheck">
                                                Breakfast
                                            </label>
                                        </div>
                                        <div class="form-group">
                                            <label class="col-form-label">Total Price:</label>
                                            <input type="number" class="form-control" name="totalPrice" id="totalPrice">
                                        </div>
                                        <label for="status">Status:</label>
                                        <select id="status" class="form-control" name="status">
                                            <option value="1">Successful</option>
                                            <option value="0">Unconfirmed</option>
                                        </select>
                                </div>
                                <div class="modal-footer">
                                    <button type="button" class="btn btn-secondary" data-dismiss="modal">Close</button>
                                    <button type="submit" class="btn btn-primary">Confirm</button>
                                </div>
                                </form>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
    <hr>
    <div class="body_table overflow-auto">
        <div class="table-responsive">
            <table class="table table-striped table_rooms
            table-hover	
            table-borderless">
                <thead class="table-secondary">
                    <tr>
                        <th>#</th>
                        <th>Name</th>
                        <th>Room Name</th>
                        <th>Room Location</th>
                        <th>Date from</th>
                        <th>Date to</th>
                        <th>Total Days</th>
                        <th>Unit Price</th>
                        <th>Service</th>
                        <th>Total Price</th>
                        <th>Status</th>
                        <th>Action</th>
                    </tr>
                </thead>
                <tbody class="table-group-divider" id="bodyReservation">
                    {{#each reservations}}
                    <tr>
                        <td>{{sum @index 1}}</td>
                        <td>{{name}}</td>
                        <td>{{nameRoom}}</td>
                        <td>{{location}}</td>
                        <td>{{formattedDateFrom}}</td>
                        <td>{{formattedDateTo}}</td>
                        <td>{{totalDate}}</td>
                        <td>{{price}}</td>
                        {{#if (eq extraService.length 2)}}
                        <td>Pick up at Airport || Breakfast</td>
                        {{else if (eq extraService.[0] 30)}}
                        <td>Pick up at Airport</td>
                        {{else if (eq extraService.[0] 15)}}
                        <td>Breakfast</td>
                        {{else}}
                        <td>None</td>
                        {{/if}}
                        <td>{{totalPrice}}</td>
                        {{#if (eq status 0)}}
                        <td>Unconfirmed</td>
                        {{else}}
                        <td>Successful</td>
                        {{/if}}
                        <td>
                            <a class="btn-edit" data-toggle="modal" data-target="#editReservationModal"
                                data-id="{{_id}}" data-name="{{name}}" data-email="{{email}}" data-phone="{{phone}}"
                                data-price="{{price}}" data-room="{{nameRoom}}" data-location="{{location}}"
                                data-adult="{{adult}}" data-children="{{children}}" data-from="{{dateFrom}}"
                                data-to="{{dateTo}}" data-total="{{totalPrice}}" data-service="{{extraService}}"
                                data-status="{{status}}">Edit </a>|
                            <a class="btn-edit" data-toggle="modal" data-target="#deleteReservationModal"
                                data-id="{{_id}}" data-name="{{name}}" data-from="{{formattedDateFrom}}"
                                data-to="{{formattedDateTo}}">Delete</a>
                        </td>
                    </tr>
                    {{/each}}
                </tbody>
                <tfoot>
                </tfoot>
            </table>
        </div>
    </div>
</div>

<!-- The Delete Modal -->
<div class="modal fade" id="deleteReservationModal">
    <div class="modal-dialog">
        <div class="modal-content">
            <!-- Modal Header -->
            <div class="modal-header">
                <h4 class="modal-title">Delete confirmation</h4>
                <button type="button" class="close" data-dismiss="modal">
                    <span aria-hidden="true">&times;</span>
                </button>
            </div>
            <!-- Modal body -->
            <div class="modal-body">
                <form name="delResForm" method="POST">
                    Are you sure delete reservation of <strong id="resName"></strong> from <strong
                        id="delDateFrom"></strong>
                    to <strong id="delDateTo"></strong>?
            </div>
            <!-- Modal footer -->
            <div class="modal-footer">
                <button type="button" class="btn btn-danger btn-lg" data-dismiss="modal">Cancel</button>
                <button type="submit" class="btn btn-success btn-lg"> Yes,
                    delete </button>
            </div>
            </form>
        </div>
    </div>
</div>

<!-- The Edit Modal -->
<div class="modal fade" id="editReservationModal" tabindex="-1" role="dialog" aria-labelledby="editModalLabel"
    aria-hidden="true">
    <div class="modal-dialog">
        <div class="modal-content">
            <!-- Modal Header -->
            <div class="modal-header">
                <h4 class="modal-title">Edit confirmation</h4>
                <button type="button" class="close" data-dismiss="modal">
                    <span aria-hidden="true">&times;</span>
                </button>
            </div>
            <!-- Modal body -->
            <div class="modal-body">
                <form name="editResForm" method="POST">
                    <div class="form-group">
                        <label for="resName" class="col-form-label">User Name:</label>
                        <input type="text" class="form-control" id="edit-name" name="name">
                    </div>
                    <div class="form-group">
                        <label class="col-form-label">User email:</label>
                        <input type="text" class="form-control" id="edit-email" name="email">
                    </div>
                    <div class="form-group">
                        <label class="col-form-label">User phone:</label>
                        <input type="text" class="form-control" id="edit-phone" name="phone">
                    </div>
                    <div class="form-group">
                        <label class="col-form-label">Room Name:</label>
                        <input type="text" class="form-control" name="nameRoom" id="edit-nameRoom">
                    </div>
                    <div class="form-group">
                        <label class="col-form-label">Room Location:</label>
                        <input type="text" class="form-control" name="location" id="edit-location">
                    </div>
                    <div class="form-group">
                        <label class="col-form-label">Number Adult:</label>
                        <input type="number" class="form-control" name="adult" id="edit-adult">
                    </div>
                    <div class="form-group">
                        <label class="col-form-label">Number Children:</label>
                        <input type="number" class="form-control" name="children" id="edit-children">
                    </div>
                    <div class="form-group">
                        <label class="col-form-label">Date From:</label>
                        <input type="date" class="form-control" name="dateFrom" id="edit-dateFrom">
                    </div>
                    <div class="form-group">
                        <label class="col-form-label">Date To:</label>
                        <input type="date" class="form-control" name="dateTo" id="edit-dateTo">
                    </div>
                    <div class="form-group">
                        <label class="col-form-label">Room Price:</label>
                        <input type="number" class="form-control" name="price" id="edit-price">
                    </div>
                    <div class="form-check">
                        <input type="checkbox" class="form-check-input" id="edit-extraService1" name="extraService"
                            value="30">
                        <label class="form-check-label" for="extraService">
                            Pick up at Airport
                        </label>
                        <input type="checkbox" class="form-check-input" id="edit-extraService2" name="extraService"
                            value="15">
                        <label class="form-check-label" for="extraService">
                            Breakfast
                        </label>
                    </div>
                    <div class="form-group">
                        <label class="col-form-label">Total Price:</label>
                        <input type="number" class="form-control" name="totalPrice" id="edit-totalPrice">
                    </div>
                    <label for="status">Status:</label>
                    <select id="edit-status" class="form-control" name="status">
                        <option value="1">Successful</option>
                        <option value="0">Unconfirmed</option>
                    </select>
            </div>

            <!-- Modal footer -->
            <div class="modal-footer">
                <button type="button" class="btn btn-danger btn-lg" data-dismiss="modal">Cancel</button>
                <button type="submit" class="btn btn-success btn-lg"> Update </button>
            </div>
            </form>
        </div>
    </div>
</div>